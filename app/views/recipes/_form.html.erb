<%= form_for @recipe, html: { class: 'needs-validation' } do |f| %>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <%= f.hidden_field :recipe_id %>

  <div class="mb-3">
    <%= f.label :cook_on, class: 'form-label' %>
    <%= f.text_field :cook_on, class: 'form-control datepicker', placeholder: 'YYYY-MM-DD' %>
  </div>

  <div class="mb-3">
    <%= f.label :recipe_link, class: 'form-label' %>
    <%= f.text_field :recipe_link, class: 'form-control', placeholder: 'https://...' %>
  </div>

  <div class="mb-3">
    <%= f.label :recipe_description, class: 'form-label' %>
    <%= f.text_area :recipe_description, class: 'form-control', rows: 3 %>
  </div>

  <div class="mb-3">
    <%= f.label :tag_list, "Tags (separated by commas)", class: 'form-label' %>
    <%= f.text_field :tag_list, class: 'form-control' %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to "Cancel", recipes_path, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
