<%- model_class = Recipe -%>
<div class="page-header">
  <h1><%=t 'Meals Planned', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Recipe Name:</strong></dt>
  <dd><%= @recipe.name %></dd>
  <dt><strong>Recipe ID:</strong></dt>
  <dd><%= @recipe.recipe_id %></dd>
  <dt><strong>Recipe Link:</strong></dt>
  <dd><%= @recipe.recipe_link %></dd>
  <dt><strong>Recipe Description:</strong></dt>
  <dd><%= @recipe.recipe_description %></dd>
  <dt><strong>Cook On:</strong></dt>
  <dd><%= @recipe.cook_on %></dd>
  <dt><strong>Tags:</strong></dt>
  <dd><%= @recipe.tag_list %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              recipes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_recipe_path(@recipe), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              recipe_path(@recipe),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
